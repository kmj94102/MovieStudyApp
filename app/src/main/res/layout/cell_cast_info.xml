<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cast"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_cast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@color/black"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_cast_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="start"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/main_white_color"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/card_cast"
        app:layout_constraintEnd_toEndOf="@id/card_cast"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="cast name"
        tools:textColor="@color/black"/>

    <TextView
        android:id="@+id/txt_actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/gray_color"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@id/txt_cast_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_cast_name"
        app:layout_constraintEnd_toEndOf="@id/txt_cast_name"
        tools:text="actor name"
        tools:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>